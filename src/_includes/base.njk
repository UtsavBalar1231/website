<body>
	<a href="#main-content" class="skip-link">Skip to main content</a>
	<div class="terminal-container">
		{% include "ascii-header.njk" %}

		<nav class="terminal-nav" role="navigation" aria-label="Main navigation">
			{% include "nav.njk" %}
		</nav>

		<main class="terminal-content" id="main-content">{{ content | safe }}</main>

		<footer class="terminal-footer">{% include "footer.njk" %}</footer>
